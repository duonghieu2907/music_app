<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:paddingBottom="18dp"
    android:background="@color/black">

    <!-- Queue Button (ImageView) -->
    <ImageView
        android:id="@+id/queueButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/unclicked"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Song Name (TextView) -->
    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-10dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="@id/queueButton1"
        app:layout_constraintStart_toEndOf="@id/queueButton1"/>

    <!-- Artist Name (TextView) -->
    <TextView
        android:id="@+id/tvArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist Name"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSongName"
        app:layout_constraintStart_toEndOf="@id/queueButton1"/>

    <!-- Queue Menu (ImageView) -->
    <ImageView
        android:id="@+id/queueMenu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/hamburger_menu_smol"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@id/queueButton1"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
