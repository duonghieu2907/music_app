<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolNav1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/playListsLibraryText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/gothicbold"
        android:text="Your Library"
        android:textColor="@color/lightBlue"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@id/toolNav1"
        app:layout_constraintEnd_toEndOf="@id/toolNav1"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="@id/toolNav1"
        app:layout_constraintTop_toTopOf="@id/toolNav1"
        app:layout_constraintVertical_bias="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music_logo"
        app:layout_constraintBottom_toBottomOf="@+id/playListsLibraryText"
        app:layout_constraintEnd_toStartOf="@id/playListsLibraryText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playListsLibraryText"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="SEARCH"
        android:scaleType="centerCrop"
        android:background="@color/black"
        android:src="@drawable/ic_explore"
        app:layout_constraintBottom_toBottomOf="@+id/playListsLibraryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.772"
        app:layout_constraintStart_toEndOf="@id/playListsLibraryText"
        app:layout_constraintTop_toTopOf="@+id/playListsLibraryText"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>