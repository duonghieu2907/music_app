            <ImageView
                android:id="@+id/queueMenu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/hamburger_menu_smol"
                app:layout_constraintTop_toTopOf="@id/queueButton2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="53dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/queueButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/unclicked"
                app:layout_constraintTop_toBottomOf="@id/queueButton2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="42dp"/>

            <TextView
