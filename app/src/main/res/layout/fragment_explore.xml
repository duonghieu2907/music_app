<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <!-- Top Section with Gradient Background -->
    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/gradient_cyan"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar Icon -->
        <ImageView
            android:id="@+id/avatar_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="avatar"
            android:src="@drawable/ic_avatar"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/cyan"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Songs, Artists, Podcasts &amp; More"
        android:textColorHint="@android:color/darker_gray"
        android:drawableStart="@drawable/baseline_search_24"
        android:drawablePadding="10dp"
        android:drawableTint="@android:color/darker_gray"
        android:inputType="text"
        android:paddingHorizontal="15dp"
        android:background="@drawable/search_bar_background"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Continue Listening Section -->
    <LinearLayout
        android:id="@+id/top_genre_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_marginTop="140dp"
        android:paddingTop="10dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Top Genres"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <!-- Box 1 -->
            <LinearLayout
                android:id="@+id/box_genre_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/recent_listen_bg"
                android:layout_columnWeight="1">
                <!-- Content of the box -->
                <!-- Genre Cover (Square ImageView) -->
                <ImageView
                    android:id="@+id/genre_cover_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_album_cover"
                    android:src="@drawable/album_cover_ttpd" />

                <!-- Genre Name (TextView) -->
                <TextView
                    android:id="@+id/genre_name_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Genre"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Box 2 -->
            <LinearLayout
                android:id="@+id/box_genre_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/recent_listen_bg"
                android:layout_columnWeight="1">
                <!-- Content of the box -->
                <!-- Genre Cover (Square ImageView) -->
                <ImageView
                    android:id="@+id/genre_cover_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_album_cover"
                    android:src="@drawable/album_cover_ttpd" />

                <!-- Album Name (TextView) -->
                <TextView
                    android:id="@+id/genre_name_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Genre"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Box 3 -->
            <LinearLayout
                android:id="@+id/box_genre_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/recent_listen_bg"
                android:layout_columnWeight="1">
                <!-- Content of the box -->
                <!-- Genre Cover (Square ImageView) -->
                <ImageView
                    android:id="@+id/genre_cover_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_album_cover"
                    android:src="@drawable/album_cover_ttpd" />

                <!-- Genre Name (TextView) -->
                <TextView
                    android:id="@+id/genre_name_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Genre"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Box 4 -->
            <LinearLayout
                android:id="@+id/box_genre_4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/recent_listen_bg"
                android:layout_columnWeight="1">
                <!-- Content of the box -->
                <!-- Genre Cover (Square ImageView) -->
                <ImageView
                    android:id="@+id/genre_cover_4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_album_cover"
                    android:src="@drawable/album_cover_ttpd" />

                <!-- Genre Name (TextView) -->
                <TextView
                    android:id="@+id/genre_name_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Genre"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </GridLayout>
    </LinearLayout>

    <!-- Browsing Section -->
    <LinearLayout
        android:id="@+id/browsing_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_marginTop="430dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/browsing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse All"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/browsing_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

    </LinearLayout>

</FrameLayout>
