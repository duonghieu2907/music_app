                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/hamburger_menu_smol"
                app:layout_constraintTop_toTopOf="@id/queueButton3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="53dp"
                android:layout_marginTop="10dp" />

            <!-- padding for scroll view ending -->
            <View
                app:layout_constraintTop_toBottomOf="@id/queueButton3"
                android:layout_width="match_parent"
                android:layout_height="70dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <View
        android:id="@+id/gradientQueue"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:background="@drawable/black_gradient"
        app:layout_constraintBottom_toBottomOf="@id/queue_scroll_view"
