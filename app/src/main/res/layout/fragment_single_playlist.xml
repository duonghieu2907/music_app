<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121111">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="28dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_leftarrow"
        android:contentDescription="Back Button"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside" />

    <!-- Options Button -->
    <ImageView
        android:id="@+id/optionsButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_more_vert"
        android:contentDescription="Options Button"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside" />

    <!-- Title above Playlist -->
    <TextView
        android:id="@+id/fromPlaylists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="FROM “PLAYLISTS”"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.05" />

    <!-- Playlist Image -->
    <ImageView
        android:id="@+id/playlistImage"
        android:layout_width="263dp"
        android:layout_height="252dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blacker_gradient"
        android:contentDescription="Playlist Image"
        android:scaleType="centerCrop" />

    <!-- Header Title -->
    <TextView
        android:id="@+id/playlistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/playlistImage"
        android:layout_marginTop="20dp"
        android:text="Lofi Loft"
        android:textSize="34sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.1" />

    <!-- User who owns the playlist -->
    <TextView
        android:id="@+id/playlistSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playlistTitle"
        android:layout_centerHorizontal="true"
        android:text="soft, chill, dreamy, lo-fi beats"
        android:textSize="13sp"
        android:textColor="#B3FFFFFF"
        android:fontFamily="sans-serif" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSongs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/playlistTitle"
        android:padding="16dp" />
</RelativeLayout>
