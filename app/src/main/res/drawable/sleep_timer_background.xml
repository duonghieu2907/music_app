<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape>
            <solid android:color="#1E1E1E" />
        </shape>
    </item>

    <!-- Gradient overlay -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#FF000000"
                android:endColor="#4D4D4D" />
        </shape>
    </item>
</layer-list>